{
    "author"      : "Henri Bouvier",
    "name"        : "tomahawk",
    "description" : "Minimal HTTP Server",
    "version"     : "0.0.4",
    "repository"  : {
        "type" : "git",
        "url"  : "https://github.com/hbouvier/tomahawk.git"
    },
    "dependencies"         : {
        "express"      : "latest",
        "connect"      : "latest",
        "socket.io"    : "latest",
        "winston"      : "latest",
        "node-options" : "latest"
    },
    "engines"              : {
        "node" : ">= 0.8.0 < 0.11.0"
    },
    "main" : "./lib/tomahawk.js",
    "bin"  : {
        "tomahawk" : "./bin/tomahawk"
    },
    "scripts": {
        "start": "bin/tomahawk"
    },
    "configuration"        : {
        "name"       : "Tomahawk",
        "level"      : "verbose",
        "www"        : ".",
        "config"     : "config.json",
        "context"    : "/",
        "port"       : 8080,
        "ip"         : "0.0.0.0",
        "headers"    : [
            "Access-Control-Allow-Origin : *",
            "X-Frame-Options             : ALLOWALL"
        ]
    }
}
